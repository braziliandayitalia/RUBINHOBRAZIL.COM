<style>
  .hero {
    min-height: calc(100vh - var(--nav-height));
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    background: radial-gradient(circle at 70% 50%, rgba(0, 243, 255, 0.05), transparent 50%);
  }

  .grain-overlay {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-image: url('https://grainy-gradients.vercel.app/noise.svg');
    opacity: 0.15;
    pointer-events: none;
    z-index: 2;
  }

  .hero-content {
    flex: 1;
    z-index: 10;
    padding-left: 2rem;
  }

  /* ... rest of the existing styles ... */

  .hero-title {
    font-size: 6rem;
    line-height: 0.9;
    font-weight: 800;
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: -2px;
  }

  .hero-subtitle {
    font-size: 1.4rem;
    color: var(--text-secondary);
    max-width: 550px;
    margin-bottom: 3rem;
    font-weight: 400;
  }

  .light-beam {
    position: absolute;
    top: -50%;
    left: 50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(from 180deg at 50% 50%, transparent, rgba(0, 243, 255, 0.05), transparent);
    animation: rotateBeam 20s linear infinite;
    z-index: 0;
  }

  @keyframes rotateBeam {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  /* ... existing responsive styles ... */
</style>
