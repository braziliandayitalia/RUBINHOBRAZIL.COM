---
interface Props {
  date: string;
  time: string;
  title: string;
  location: string;
  link: string;
  soldOut: boolean;
}

const { date, time, title, location, link, soldOut } = Astro.props;

// Safe date parsing
const dateObj = new Date(date);
const isValidDate = !isNaN(dateObj.getTime());

const day = isValidDate ? dateObj.getDate() : '';
const month = isValidDate
  ? dateObj.toLocaleString('en-US', { month: 'short' }).toUpperCase()
  : '';
---

<div class={`event-card glass-card page-fade-in ${soldOut ? 'sold-out' : 'neon-border-cyan'}`}>
  <div class="event-date">
    <span class="day">{day}</span>
    <span class="month">{month}</span>
  </div>

  <div class="event-info">
    <h3>{title}</h3>
    <p class="location grad-cyan-pink">{location}</p>
    <p class="time">{time}</p>
  </div>

  <div class="event-action">
    {soldOut ? (
      <span class="badge-sold-out">SOLD OUT</span>
    ) : (
      <a href={link} class="btn btn-secondary glow-hover" target="_blank" rel="noopener noreferrer">
        Tickets
      </a>
    )}
  </div>
</div>

<style>
  .event-card {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.03);
    padding: 2rem;
    border-radius: 12px;
  }

  .event-card:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateX(15px);
    box-shadow: 0 0 30px rgba(0, 243, 255, 0.1);
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    height: 80px;
    background: var(--accent-cyan);
    color: black;
    border-radius: 8px;
    font-weight: 800;
  }

  .day {
    font-size: 1.8rem;
    line-height: 1;
  }

  .month {
    font-size: 0.8rem;
    letter-spacing: 1px;
  }

  .event-info {
    flex-grow: 1;
  }

  .event-info h3 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .location {
    color: var(--accent-pink);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .time {
    color: var(--text-secondary);
    font-size: 0.8rem;
  }

  .badge-sold-out {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 600px) {
    .event-card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .event-date {
      width: 100%;
      height: 60px;
      flex-direction: row;
      gap: 0.5rem;
    }

    .event-card:hover {
      transform: translateY(-5px);
    }
  }
</style>
