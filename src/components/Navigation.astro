---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Agenda', href: '/agenda' },
  { name: 'Music', href: '/music' },
  { name: 'Clips', href: '/clips' },
  { name: 'Links', href: 'https://linktr.ee/RubinhobrazilDj' },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="main-nav">
  <div class="nav-container">
    <a href="/" class="logo">
      <video src="/logo.mp4" autoplay loop muted playsinline class="logo-video"></video>
      <div class="logo-text">
        <span class="neon-text-cyan">RUBINHO</span> <span class="neon-text-pink">BRAZIL</span>
      </div>
    </a>
    <button class="mobile-toggle"><span></span><span></span><span></span></button>
    <ul class="nav-links" id="nav-menu">
      {navLinks.map(link => <li><a href={link.href}>{link.name}</a></li>)}
    </ul>
  </div>
</nav>

<style>
  .main-nav { height: var(--nav-height); background: rgba(0,0,0,0.85); backdrop-filter: blur(15px); position: fixed; top: 0; width: 100%; z-index: 1000; }
  .nav-container { max-width: 1200px; margin: 0 auto; height: 100%; display: flex; justify-content: space-between; align-items: center; padding: 0 1.5rem; }
  .logo { display: flex; align-items: center; gap: 1rem; font-size: 1.5rem; font-weight: 800; }
  .logo-video { width: 45px; height: 45px; border-radius: 50%; object-fit: cover; border: 2px solid var(--accent-cyan); }
  @media (max-width: 600px) { .logo-text { display: none; } }
  .nav-links { display: flex; gap: 2rem; }
  @media (max-width: 900px) {
    .nav-links { position: fixed; right: -100%; top: 0; height: 100vh; width: 70%; background: #000; flex-direction: column; justify-content: center; align-items: center; transition: 0.3s; }
    .nav-links.active { right: 0; }
  }
</style>
