---
import Layout from '../layouts/Layout.astro';
import MusicPlayer from '../components/MusicPlayer.astro';
---

<Layout title="Music">
  <section class="music-page page-fade-in">
    <div class="page-header">
      <h1 class="neon-text-cyan grad-cyan-pink">
        Music <span class="neon-text-pink">Library</span>
      </h1>
      <p>Originals, Remixes, and Exclusive Mashups.</p>
    </div>

    <MusicPlayer />

    <!-- SEZIONE SPOTIFY -->
    <div class="spotify-section glass-card fade-in neon-border-cyan">
      <h2 class="grad-cyan-pink">My Favours Spotify Songs</h2>

      <div class="spotify-embed-container">
        <iframe 
          src="https://open.spotify.com/embed/user/31qtmutywoegml3vuxaapsmd6hwi?utm_source=generator&theme=0" 
          width="100%" 
          height="380" 
          frameborder="0" 
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
          loading="lazy">
        </iframe>
      </div>

      <div class="spotify-cta">
        <a 
          href="https://open.spotify.com/user/31qtmutywoegml3vuxaapsmd6hwi" 
          target="_blank" 
          class="btn btn-primary glow-hover neon-border-pink"
        >
          Open My Spotify Profile
        </a>
      </div>
    </div>

    <!-- DISCLAIMER -->
    <div class="music-disclaimer glass-card neon-border-cyan fade-in">
      <h3 class="grad-cyan-pink">Need these tracks?</h3>
      <p>
        Follow me on Spotify or SoundCloud for high-quality streaming,  
        or visit the Store for digital downloads.
      </p>
      <div class="disclaimer-btns">
        <a 
          href="https://open.spotify.com/user/31qtmutywoegml3vuxaapsmd6hwi" 
          target="_blank" 
          class="btn btn-secondary glow-hover"
        >
          Spotify Profile
        </a>
        <a 
          href="#" 
          class="btn btn-secondary glow-hover"
        >
          SoundCloud
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .music-page {
    min-height: 80vh;
    padding: 2.5rem 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-size: 4rem;
    text-transform: uppercase;
    margin-bottom: 1rem;
    letter-spacing: -1px;
  }

  .page-header p {
    color: var(--text-secondary);
    font-size: 1.2rem;
    opacity: 0.9;
  }

  /* SPOTIFY */
  .spotify-section {
    max-width: 1100px;
    margin: 5rem auto;
    padding: 3rem;
    text-align: center;
    position: relative;
  }

  .spotify-section h2 {
    font-size: 2.4rem;
    margin-bottom: 2.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .spotify-embed-container {
    position: relative;
    border-radius: 14px;
    overflow: hidden;
    box-shadow:
      0 0 30px rgba(0, 243, 255, 0.25),
      0 0 60px rgba(255, 0, 127, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .spotify-embed-container:hover {
    transform: scale(1.01);
    box-shadow:
      0 0 40px rgba(0, 243, 255, 0.35),
      0 0 90px rgba(255, 0, 127, 0.25);
  }

  .spotify-embed-container iframe {
    display: block;
    width: 100%;
    height: 380px;
    border: none;
  }

  .spotify-cta {
    margin-top: 2.5rem;
  }

  /* DISCLAIMER */
  .music-disclaimer {
    max-width: 1100px;
    margin: 5rem auto 2rem;
    text-align: center;
    padding: 4rem 3rem;
    background: rgba(255, 255, 255, 0.03);
  }

  .music-disclaimer h3 {
    font-size: 2.1rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .music-disclaimer p {
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.85;
  }

  .disclaimer-btns {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 3rem;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.5rem;
    }

    .music-page {
      padding: 1.5rem 1rem;
    }

    .spotify-section {
      padding: 1.5rem;
      margin: 3rem auto;
    }

    .spotify-section h2 {
      font-size: 1.8rem;
    }

    .spotify-embed-container iframe {
      height: 320px;
    }

    .disclaimer-btns {
      flex-direction: column;
      gap: 1.2rem;
    }

    .music-disclaimer {
      padding: 2.5rem 1.5rem;
    }
  }
</style>
