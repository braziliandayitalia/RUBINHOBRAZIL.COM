---
import music from '../data/music.json';
---

<div class="music-player-container glass-card page-fade-in">
  <div class="player-main">
    <div class="now-playing">
      <div class="cover-wrapper">
        <img id="current-cover" src={music[0].cover} alt="Cover" />
        <div class="waveform-overlay" id="waveform">
          <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
          <div class="bar"></div><div class="bar"></div><div class="bar"></div><div class="bar"></div>
        </div>
      </div>
      <div class="track-info">
        <h2 id="current-title">{music[0].title}</h2>
        <p id="current-artist">{music[0].artist}</p>
        <div class="track-meta">
          <span id="current-category" class="category">{music[0].category}</span>
          <span class="badge neon-border-cyan">HD AUDIO</span>
        </div>
      </div>
    </div>

    <div class="player-controls">
      <audio id="main-audio" src={music[0].url}></audio>
      
      <div class="progress-bar-container">
        <div id="progress-bar" class="progress-bar"></div>
      </div>
      
      <div class="control-btns">
        <button id="prev-btn" class="ctrl-btn">&larr;</button>
        <button id="play-btn" class="ctrl-btn play-btn glow-hover">Play</button>
        <button id="next-btn" class="ctrl-btn">&rarr;</button>
      </div>
    </div>
  </div>

  <div class="playlist-sidebar">
    <div class="playlist-header">
      <h3 class="grad-cyan-pink">Next Tracks</h3>
    </div>
    <ul class="playlist">
      {music.map((track, index) => (
        <li class={`playlist-item ${index === 0 ? 'active' : ''}`} data-index={index}>
          <div class="item-visual">
            <img src={track.cover} alt="" />
          </div>
          <div class="item-info">
            <span class="item-title">{track.title}</span>
            <span class="item-artist">{track.artist}</span>
          </div>
        </li>
      ))}
    </ul>
  </div>
</div>

<script>
  // Script logic
  const musicData = [
    {
      "title": "Summer Vibe 2024",
      "artist": "DJ RUBINHO BRAZIL",
      "url": "/music/summer-vibe-2024.mp3",
      "category": "Originals",
      "cover": "https://placehold.co/400x400/111/00f3ff?text=Summer+Vibe"
    },
    {
      "title": "Techno Night (Remix)",
      "artist": "DJ RUBINHO BRAZIL",
      "url": "/music/techno-night-remix.mp3",
      "category": "Versions",
      "cover": "https://placehold.co/400x400/111/ff007f?text=Techno+Night"
    },
    {
      "title": "Latino Fire Mashup",
      "artist": "DJ RUBINHO BRAZIL",
      "url": "/music/latino-fire.mp3",
      "category": "Mashup",
      "cover": "https://placehold.co/400x400/111/00f3ff?text=Latino+Fire"
    }
  ];

  let currentIndex = 0;
  const audio = document.getElementById('main-audio');
  const playBtn = document.getElementById('play-btn');
  const waveform = document.getElementById('waveform');
  const progressBar = document.getElementById('progress-bar');
  const playlistItems = document.querySelectorAll('.playlist-item');

  function loadTrack(index) {
    const track = musicData[index];
    document.getElementById('current-title').textContent = track.title;
    document.getElementById('current-artist').textContent = track.artist;
    document.getElementById('current-cover').src = track.cover;
    document.getElementById('current-category').textContent = track.category;
    audio.src = track.url;
    
    playlistItems.forEach(item => item.classList.remove('active'));
    playlistItems[index].classList.add('active');
  }

  playBtn.addEventListener('click', () => {
    if (audio.paused) {
      audio.play();
      playBtn.textContent = 'Pause';
      waveform.classList.add('active');
    } else {
      audio.pause();
      playBtn.textContent = 'Play';
      waveform.classList.remove('active');
    }
  });

  audio.addEventListener('timeupdate', () => {
    const percent = (audio.currentTime / audio.duration) * 100;
    progressBar.style.width = percent + '%';
  });

  document.getElementById('next-btn').addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % musicData.length;
    loadTrack(currentIndex);
    audio.play();
    playBtn.textContent = 'Pause';
    waveform.classList.add('active');
  });

  document.getElementById('prev-btn').addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + musicData.length) % musicData.length;
    loadTrack(currentIndex);
    audio.play();
    playBtn.textContent = 'Pause';
    waveform.classList.add('active');
  });

  playlistItems.forEach(item => {
    item.addEventListener('click', () => {
      currentIndex = parseInt(item.getAttribute('data-index'));
      loadTrack(currentIndex);
      audio.play();
      playBtn.textContent = 'Pause';
      waveform.classList.add('active');
    });
  });
</script>

<style>
  .music-player-container {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 0;
    background: rgba(10, 10, 10, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    overflow: hidden;
    max-width: 1100px;
    margin: 2rem auto;
  }

  .player-main {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .now-playing {
    display: flex;
    gap: 3rem;
    align-items: center;
  }

  .cover-wrapper {
    position: relative;
    width: 250px;
    height: 250px;
  }

  .cover-wrapper img {
    width: 100%;
    height: 100%;
    border-radius: 15px;
    object-fit: cover;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  }

  .waveform-overlay {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: flex-end;
    gap: 3px;
    height: 40px;
    opacity: 0;
    transition: 0.5s;
    background: rgba(0,0,0,0.5);
    padding: 8px 15px;
    border-radius: 20px;
    backdrop-filter: blur(5px);
  }

  .waveform-overlay.active {
    opacity: 1;
  }

  .bar {
    width: 3px;
    height: 5px;
    background: var(--accent-cyan);
    border-radius: 1px;
  }

  .active .bar {
    animation: wave 1s infinite ease-in-out;
  }

  @keyframes wave {
    0%, 100% { height: 5px; }
    50% { height: 25px; }
  }

  .track-info h2 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    letter-spacing: -1px;
  }

  .track-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-top: 1.5rem;
  }

  .badge {
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 800;
  }

  .progress-bar-container {
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    cursor: pointer;
  }

  .progress-bar {
    height: 100%;
    background: var(--accent-cyan);
    box-shadow: 0 0 15px var(--accent-cyan);
    width: 0%;
  }

  .control-btns {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    align-items: center;
  }

  .play-btn {
    width: 70px;
    height: 70px;
    background: white;
    color: black;
    border-radius: 50%;
    font-weight: 800;
  }

  .playlist-sidebar {
    background: rgba(0, 0, 0, 0.4);
    border-left: 1px solid var(--glass-border);
    padding: 2rem;
  }

  .playlist-header h3 {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 2rem;
  }

  .playlist-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem;
    border-radius: 10px;
    cursor: pointer;
    margin-bottom: 0.5rem;
    transition: 0.3s;
  }

  .playlist-item:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .playlist-item.active {
    background: rgba(0, 243, 255, 0.15);
  }

  .item-visual img {
    width: 45px;
    height: 45px;
    border-radius: 6px;
    object-fit: cover;
  }

  .item-title {
    display: block;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .item-artist {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  @media (max-width: 900px) {
    .music-player-container { grid-template-columns: 1fr; }
    .now-playing { flex-direction: column; text-align: center; }
  }
</style>
