---
import Layout from '../layouts/Layout.astro';
import MusicPlayer from '../components/MusicPlayer.astro';
---

<Layout title="Music">
  <section class="music-page page-fade-in">
    <div class="page-header">
      <h1 class="neon-text-cyan grad-cyan-pink">Music <span class="neon-text-pink">Library</span></h1>
      <p>Originals, Remixes, and Exclusive Mashups.</p>
    </div>
    
    <MusicPlayer />

    <div class="spotify-section glass-card fade-in">
      <h2 class="neon-text-pink">My Spotify World</h2>
      <p>Esplora le mie selezioni e seguimi per non perdere i nuovi Live Set.</p>
      <div class="spotify-follow-container">
        <a href="https://open.spotify.com/user/31qtmutywoegml3vuxaapsmd6hwi" target="_blank" class="spotify-pro-card neon-border-cyan">
          <div class="spotify-logo">
            <svg viewBox="0 0 24 24" fill="#1DB954" width="50" height="50"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.496 17.293c-.22.36-.677.48-1.037.26-2.548-1.558-5.753-1.912-9.528-1.052-.41.093-.82-.166-.913-.576-.093-.41.166-.82.576-.913 4.14-.947 7.697-.535 10.596 1.24.36.22.48.677.26 1.037zm1.47-3.26c-.277.45-.865.594-1.315.317-2.914-1.79-7.357-2.307-10.8-1.263-.506.154-1.04-.132-1.194-.638-.154-.506.132-1.04.638-1.194 3.937-1.195 8.84-.616 12.155 1.42.45.277.594.865.317 1.315zm.138-3.395c-3.5-2.078-9.284-2.272-12.646-1.252-.537.163-1.104-.143-1.267-.68-.163-.537.143-1.104.68-1.267 3.844-1.167 10.222-.94 14.28 1.468.484.286.643.91.357 1.394-.286.484-.91.643-1.394.357z"/></svg>
          </div>
          <div class="spotify-info">
            <h3>DJ RUBINHO BRAZIL</h3>
            <span>Listen & Follow on Spotify</span>
          </div>
          <div class="follow-btn btn btn-primary">SEGUIMI</div>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .music-page { min-height: 80vh; padding: 2rem; }
  .page-header { text-align: center; margin-bottom: 4rem; }
  .page-header h1 { font-size: 3.5rem; text-transform: uppercase; }
  .spotify-section { max-width: 1100px; margin: 4rem auto; padding: 3rem; text-align: center; }
  .spotify-section h2 { font-size: 2.2rem; margin-bottom: 1rem; }
  .spotify-follow-container { display: flex; justify-content: center; margin-top: 3rem; }
  .spotify-pro-card { display: flex; align-items: center; gap: 2rem; padding: 2.5rem 4rem; background: rgba(255,255,255,0.03); border-radius: 100px; transition: 0.3s; }
  .spotify-pro-card:hover { transform: scale(1.03); background: rgba(29, 185, 84, 0.1); }
  .spotify-info h3 { font-size: 1.8rem; margin: 0; }
  @media (max-width: 768px) { .spotify-pro-card { flex-direction: column; padding: 2rem; border-radius: 20px; text-align: center; } }
</style>
